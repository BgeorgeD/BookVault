<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">

    <persistence-unit name="BookVaultPU" transaction-type="RESOURCE_LOCAL">
        <!-- Entity classes -->
        <class>com.github.perryth3platypus.model.Librarian</class>
        <class>com.github.perryth3platypus.model.Book</class>
        <class>com.github.perryth3platypus.model.Patron</class>
        <class>com.github.perryth3platypus.model.InternalLocation</class>
        <class>com.github.perryth3platypus.model.Series</class>
        <class>com.github.perryth3platypus.model.Author</class>
        <class>com.github.perryth3platypus.model.Borrow</class>

        <!-- Data source configuration -->
        <properties>
            <!-- JDBC connection properties -->
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/BookVault"/>
<!--            <property name="javax.persistence.jdbc.user" value="DB_USERNAME_HERE"/>-->
<!--            <property name="javax.persistence.jdbc.password" value="DB_PASSWORD_HERE"/>-->

            <!-- Hibernate-specific properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.show_sql" value="true"/>


            <property name="hibernate.format_sql" value="true"/>
            <!-- Automatic table creation/update (use 'update' cautiously in production) -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>

</persistence>